<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/mediumGray"
        android:text="LEVEL YOUR ARTIFACTS"
        android:textAlignment="center"
        android:textColor="@color/goldenrod"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonFlower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="25dp"
        android:onClick="getFlowerInfo"
        android:text="Flower"
        app:backgroundTint="@color/goldenrod"
        app:layout_constraintBottom_toTopOf="@+id/buttonCirclet"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonFeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="25dp"
        android:onClick="getPlumeInfo"
        android:text="Feather"
        app:backgroundTint="@color/goldenrod"
        app:layout_constraintBottom_toTopOf="@+id/buttonFlower"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonCirclet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="getCircletInfo"
        android:text="Circlet"
        app:backgroundTint="@color/goldenrod"
        app:layout_constraintBottom_toTopOf="@+id/displaystats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonGoblet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="25dp"
        android:onClick="getGobletInfo"
        android:text="Goblet"
        app:backgroundTint="@color/goldenrod"
        app:layout_constraintBottom_toTopOf="@+id/buttonSands"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonSands"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="25dp"
        android:onClick="getSandsInfo"
        android:text="Sands"
        app:backgroundTint="@color/goldenrod"
        app:layout_constraintBottom_toTopOf="@+id/buttonCirclet"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/displaystats"
        android:layout_width="213dp"
        android:layout_height="152dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonLevelUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="68dp"
        android:text="Level Up"
        app:backgroundTint="@color/goldenrod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displaystats" />

    <Button
        android:id="@+id/buttonpullUserBuild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pull User Build"
        app:backgroundTint="@color/goldenrod"
        app:layout_constraintEnd_toStartOf="@+id/buttonLevelUp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="571dp"
        android:onClick="pullUserBuild"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
